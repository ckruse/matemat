<table class="table table-striped table-bordered">
  <thead>
    <th><%= t("views.name") %></th>
    <th>Letzter Login</th>
    <th><%= t("views.last_activity") %></th>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.display_name, (not current_user.blank? and current_user.user_id == user.user_id) ? user_path(user) : touch_login_path(id: user.user_id) %></td>
      <td><%= user.last_login_at ? l(user.last_login_at) : ('<em>' + t('views.never') + '</em>').html_safe %></td>
      <td><%= user.last_activity_at ? l(user.last_activity_at) : ('<em>' + t('views.never') + '</em>').html_safe %></td>
    </tr>
    <% end %>
  </tbody>
</table>
