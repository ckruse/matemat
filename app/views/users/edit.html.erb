<h1><%= t("views.change_passwort") %></h1>

<%= form_for @user, html: {:class => 'form-horizontal'} do |t| %>

<div class="control-group">
  <%= t.label :password, :class => 'control-label' %>
  <div class="controls"><%= t.password_field :password %></div>
</div>

<div class="control-group">
  <%= t.label :password_confirmation, :class => 'control-label' %>
  <div class="controls"><%= t.password_field :password_confirmation %></div>
</div>

<div class="form-actions">
  <input type="submit" value="<%= t("views.update") %>" class="btn btn-primary">
  <a href="<%= root_url %>" class="btn"><%= t("views.cancel") %></a>
</div>

<% end %>
