<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Matemat" %></title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>

    <script>
      baseUrl = <%== root_url.to_json %>;
    </script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <%= yield(:head) %>
  </head>

  <body data-controller="<%= controller_path %>" data-action="<%= action_name %>"<% if content_for? :body_id %> id="<%= yield(:body_id) %>"<% end %>>

    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </div>
    </div>

    <div class="container-fluid">

      <div class="row-fluid">
        <%= render 'layouts/sidebar' %>

        <% if @has_subnav %><div class="span10"><% end %>

        <div id="alerts-container">
        <% flash.each do |name,msg| %>
          <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= msg %>
          </div>
        <% end %>
        </div>


        <%= yield %>
        <% if @has_subnav %></div><% end %>
      </div>

    </div> <!--! end of .container -->

  </body>
</html>
