<h1>Pizza-Bestellung vom <%= l(@item.order.created_at, format: "%A, %d. %m. %Y %H:%M") %></h1>

<%= form_for @item, url: order_items_path(@item.order), html: {:class => 'form-horizontal'} do |t| %>

<div class="control-group">
  <label for="pizza_id" class="control-label">Pizza</label>
  <div class="controls">
    <select name="pizza_id">
      <% @item.order.pizzeria.pizzas.each do |p| %>
      <option value="<%= p.pizza_id %>"<% if @pizza and @pizza.pizza_id == p.pizza_id %> selected="selected"<% end %>><%= p.name %></option>
      <% end %>
    </select>
  </div>
</div>

<p class="form-actions">
  <input type="submit" value="Bestellen" class="btn btn-primary">
  <%= link_to 'Abbrechen', order_path(@item.order), :class => 'btn' %>
</p>

<% end %>