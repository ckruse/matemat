<p>E-Mail: <%= @pizzeria.email %></p>

<h2>Pizzen</h2>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Preis</th>
      <th>Zutaten</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
  <% @pizzeria.pizzas.each do |p| %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.ingredients %></td>
      <td>
        <%= link_to edit_admin_pizzeria_pizza_path(@pizzeria, p) do %><i class="icon-edit"> </i><% end %>
        <%= link_to admin_pizzeria_pizza_path(@pizzeria, p), :data => { confirm: t("views.are_you_sure") }, :method => :delete do %><i class="icon-trash"> </i><% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p class="form-actions">
  <a href="<%= edit_admin_pizzeria_path(@pizzeria) %>" class="btn btn-primary">Bearbeiten</a>
  <a href="<%= admin_pizzerias_path() %>" class="btn">Abbrechen</a>
</p>
