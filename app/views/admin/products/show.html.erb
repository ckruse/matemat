<h1><%= @product.name %></h1>

<table class="table table-condensed table-striped width40">
  <tbody>
    <tr>
      <th>Name</th>
      <td><%= @product.name %></td>

      <th>Preis CHF</th>
      <td><%= @product.price_chf %></td>
    </tr>

    <tr>
      <th>Preis EUR</th>
      <td><%= @product.price_eur %></td>

      <th>Erstellt</th>
      <td><%= l(@product.created_at, format: "%d. %B %Y %d.%m.%Y") %></td>
    </tr>

    <tr>
      <th>Geändert</th>
      <td colspan="3"><%= l(@product.updated_at, format: "%d. %B %Y %d.%m.%Y") %></td>
    </tr>
  </tbody>
</table>

<div class="form-actions">
  <a href="<%= edit_admin_product_path(@product) %>" class="btn">Bearbeiten</a>
  <a href="<%= admin_products_path() %>" class="btn">Zurück</a>
</div>
