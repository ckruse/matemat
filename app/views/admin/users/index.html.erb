<table class="table table-striped table-bordered">
  <thead>
    <th><%= t("views.name") %></th>
    <th><%= t("views.saldo") %></th>
    <th><%= t("views.last_activity") %></th>
    <th> </t>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.display_name, admin_user_path(user) %></td>
      <td><%= @bookings[user.account.account_id] || 0 %> CHF</td>
      <td><%= @activities[user.account.account_id] ? localize(@activities[user.account.account_id], format: "%d. %B %Y %H:%M") : t("views.never") %></td>
      <td>
        <%= link_to edit_admin_user_path(user) do %><i class="icon-edit"> </i><% end %>
        <%= link_to admin_user_path(user), :data => { confirm: t("are_you_sure") }, :method => :delete do %><i class="icon-trash"> </i><% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
