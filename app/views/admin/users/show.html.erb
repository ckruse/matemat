<h1><%= @user.display_name %> (<%= @user.username %>)</h1>

<table class="table table-condensed table-striped width40">
  <tbody>
    <tr>
      <th>Name</th>
      <td><%= @user.display_name %></td>

      <th>Benutzer</th>
      <td><%= @user.username %></td>
    </tr>

    <tr>
      <th>E-Mail</th>
      <td><%= @user.email %></td>

      <th>Administrator</th>
      <td><%= @user.admin ? 'Ja' : 'Nein' %></td>
    </tr>

    <tr>
      <th>Erstellt</th>
      <td><%= l(@user.created_at, format: "%d. %B %Y %d.%m.%Y") %></td>

      <th>Geändert</th>
      <td><%= l(@user.updated_at, format: "%d. %B %Y %d.%m.%Y") %></td>
    </tr>
  </tbody>
</table>

<h2 style="clear:both;">Buchungen:</h2>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>B-Nr</th>
      <th>Produkt</th>
      <th>Preis</th>
      <th>Datum</th>
      <th> </th>
    </tr>
  <thead>

  <tbody>
  <% sum = 0
    @account.bookings.each do |b|
      sum += b.value
%>
    <tr>
      <td><%= b.booking_id %></td>
      <td><%= b.product and b.product.name %></td>
      <td><%= b.value %></td>
      <td><%= l(b.created_at, format: "%d. %B %Y %H:%M") %></td>
      <td>
        <%= link_to admin_user_booking_path(@user, b), :data => { confirm: 'Sind Sie sicher?' }, :method => :delete do %><i class="icon icon-trash"> </i><% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan="2">Summe</td>
      <th colspan="2"><%= sum %></td>
      <th><%= link_to new_admin_user_booking_path(@user) do %><i class="icon icon-plus"> </i></a><% end %></th>
    </tr>
  </tfoot>
</table>

<div class="form-actions">
  <a href="<%= edit_admin_user_path(@user) %>" class="btn">Bearbeiten</a>
  <a href="<%= admin_users_path() %>" class="btn">Zurück</a>
</div>
