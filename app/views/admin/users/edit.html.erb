<h1><%= @user.display_name %> (<%= @user.username %>)</h1>

<%= form_for @user, url: admin_user_path(@user), html: {:class => 'form-horizontal'} do |t| %>
<%= render 'form', t: t %>

<div class="form-actions">
  <input type="submit" class="btn btn-primary" value="<%= t("views.update") %>"> <a href="<%= admin_user_path(@user) %>" class="btn"><%= t("views.cancel") %></a>
</div>

<% end %>
