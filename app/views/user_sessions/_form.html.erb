<%= form_tag user_sessions_path, :method => :post, :class => 'form-horizontal' do %>

  <div class="control-group">
    <%= label_tag :username, nil, :class => 'control-label' %>
    <div class="controls"><%= text_field_tag :username %></div>
  </div>

  <div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls"><%= password_field_tag :password %></div>
  </div>

  <div class="form-actions"><%= submit_tag t("views.login") %></div>
<% end %>
