<h1>Pizza-Bestellung vom <%= l(@order.created_at, format: "%d.%m.%Y") %></h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Pizza</th>
      <th>Besteller</th>
      <th>Preis</th>
      <th>Bezahlt</th>
    </tr>
  </thead>

  <tbody>
  <% @order.order_positions.each do |p| %>
    <tr>
      <td><%= o.name %></td>
      <td><%= o.user.display_name %></td>
      <td><%= o.price %></td>
      <td><%= o.paid ? 'Ja' : 'Nein' %></td>
    </tr>
  <% end %>
  </tbody>

</table>
